<%= form_with(model: book_borrower) do |form| %>
<% if book_borrower.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(book_borrower.errors.count, "error") %> prohibited this book_borrower from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% book_borrower.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :borrowDate, class: label_class %>
          <%= form.date_field :borrowDate, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :returnDate, class: label_class %>
          <%= form.date_field :returnDate, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :book_id, class: label_class %>
          <%= form.collection_select :book_id, Book.where(isAvailable: true), :id, :title, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :borrower_id, class: label_class %>
          <%= form.collection_select :borrower_id, Borrower.all, :id, :name ,class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if book_borrower.persisted? %>
<%= link_to "Cancel", book_borrower, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", book_borrowers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
